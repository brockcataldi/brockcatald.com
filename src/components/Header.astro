---
import LogoStandard from '../assets/logo-standard.svg';
import NavigationLink from './navigation-link.astro';
---

<header>
	<a href="/">
		<LogoStandard />
		<span class="sr-only">Brock Cataldi</span>

		<nav>
			<NavigationLink href="/about">About</NavigationLink>
			<NavigationLink href="/articles">Articles</NavigationLink>
			<NavigationLink href="/work">Work</NavigationLink>
		</nav>
	</a>
</header>
<style>
	header {
		max-width: var(--max-outer);
		border-bottom: 1px solid var(--neutrals-1200);
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		position: fixed;
		width: 100%;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		background-color: var(--background);
		box-sizing: border-box;
		z-index: 1000;
	}

	svg {
		width: 75px;
		padding: var(--space-3xs) var(--space-s);
		color: var(--neutrals-1200);
	}

	/* nav {
		width: 100%;
