---
import NavigationLink from '@/components/navigation-link.astro';
import NavigationSocials from '@/components/navigation-socials.astro';
import NavigationToggle from '@/components/navigation-toggle.astro';
---

<NavigationToggle />

<div class="menu">
	<nav class="navigation">
		<NavigationLink href="/about">About</NavigationLink>
		<NavigationLink href="/articles">Articles</NavigationLink>
		<NavigationLink href="/work">Work</NavigationLink>
	</nav>
	<NavigationSocials />
</div>
<style is:global>
	.menu {
		width: 100%;
		height: 100vh;
		position: absolute;
		top: calc(100% + 1px);
		background-color: var(--neutrals-100);
		right: -100%;
		transition: transform 200ms ease-in-out;
		box-sizing: border-box;
		padding: var(--space-3xl) var(--space-2xl);
	}

	.navigation {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: center;
		gap: var(--space-s);
	}

	.navigation--open .menu {
		transform: translateX(-100%);
	}

	@media screen and (min-width: 580px) {
		.menu {
			position: relative;
			height: unset;
			width: unset;
			background-color: transparent;
			right: 0;
			padding: 0;
			display: flex;
			align-items: center;
			justify-content: flex-end;
			flex-direction: row;
		}

		.navigation {
			display: flex;
			flex-direction: row;
			align-items: center;
			justify-content: flex-end;
			gap: 0;
			transition:
				200ms border-color ease-in-out,
				200ms color ease-in-out,
				200ms background-color ease-in-out;
		}

		.navigation--open .menu {
			transform: translateX(0%);
		}
	}
</style>
